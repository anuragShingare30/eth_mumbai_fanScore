generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider  = "postgresql"
}

model User {
  id                String   @id @default(cuid())
  twitterHandle     String   @unique
  displayName       String?
  profileImageUrl   String?
  tweetCount        Int      @default(0)
  mentionCount      Int      @default(0)
  hashtagCount      Int      @default(0)
  ethMumbaiScore    Int      @default(0)
  rank              String   @default("Newbie")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Referral system fields
  referralCode      String?  @unique // Made optional for migration, will backfill
  referredBy        String?  // The referral code of who referred this user
  referralCount     Int      @default(0)
  referralBonus     Int      @default(0)

  @@index([ethMumbaiScore(sort: Desc)])
  @@index([referralCount(sort: Desc)])
}
